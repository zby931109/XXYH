<?xml version="1.0" encoding="utf-8"?>
<com.lanou3g.xiaoxiongyouhao.SlidingMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lanou3g.xiaoxiongyouhao.activity.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/cehua"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000000">

                <ImageView
                    android:id="@+id/main_login_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@mipmap/mine"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="center|left"
                    android:text="小熊油耗"
                    android:textColor="#fff"
                    android:textSize="23sp"/>

                <TextView
                    android:id="@+id/main_car_management_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="车辆管理"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:gravity="center"/>

            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/main_tl_tl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/main_vp_vp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000">

                <ImageView
                    android:id="@+id/main_add_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@mipmap/add"/>

                <ImageView
                    android:id="@+id/main_list_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@mipmap/list"/>

                <ImageView
                    android:id="@+id/main_eye_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@mipmap/eye"/>

                <ImageView
                    android:id="@+id/main_share_iv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@mipmap/fenxiang"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</com.lanou3g.xiaoxiongyouhao.SlidingMenu>
